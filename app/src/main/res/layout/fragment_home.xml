<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/btnNavWorkoutsActivity"
        android:layout_width="190dp"
        android:layout_height="200dp"
        android:layout_marginLeft="8dp"
        android:onClick="goToWorkouts"
        android:text="Workouts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNavProgress"
        android:layout_marginRight="8dp"
        android:layout_width="190dp"
        android:layout_height="200dp"
        android:text="Weekly Progress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNavGoals"
        android:layout_marginRight="8dp"
        android:layout_width="190dp"
        android:layout_height="200dp"
        android:text="Goals"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNavProgress"/>

    <Button
        android:id="@+id/btnNavMaxLifts"
        android:layout_marginLeft="8dp"
        android:layout_width="190dp"
        android:layout_height="200dp"
        android:text="Max Lifts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNavWorkoutsActivity"/>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fitnesstrackerlogo" />

</androidx.constraintlayout.widget.ConstraintLayout>